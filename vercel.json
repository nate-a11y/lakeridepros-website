{
  "installCommand": "rm -rf node_modules && npm install --legacy-peer-deps",
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "lakeridepros.com"
        }
      ],
      "destination": "https://www.lakeridepros.com/:path*",
      "permanent": true
    }
  ],
  "functions": {
    "app/(payload)/admin/[[...segments]]/page.tsx": {
      "maxDuration": 30
    },
    "app/(payload)/api/[...slug]/route.ts": {
      "maxDuration": 60
    },
    "app/api/printify/sync-products/route.ts": {
      "maxDuration": 300
    }
  },
  "build": {
    "env": {
      "PAYLOAD_CONFIG_PATH": "./src/payload.config.ts"
    }
  },
  "crons": [
    {
      "path": "/api/gift-cards/send-scheduled?secret=9k2mP8xQ4nL6vR1wT7yE3fH5jN0bC9sA2dF4gK8mZ1qW6rY",
      "schedule": "0 * * * *"
    }
  ]
}
