# Payload CMS Configuration
PAYLOAD_SECRET=your-payload-secret-here-minimum-32-characters

# Database Configuration
# Note: POSTGRES_URL is auto-managed by Vercel when using Supabase integration
# For local development, use either POSTGRES_URL or DATABASE_URI
POSTGRES_URL=postgresql://user:password@host:port/database
# DATABASE_URI=postgresql://user:password@host:port/database (legacy, still supported)

# Server URL Configuration
# CRITICAL: NEXT_PUBLIC_SERVER_URL must be set for Payload admin to work on client-side
# This variable is exposed to the browser (NEXT_PUBLIC_ prefix) so the admin UI can make API calls
# Set this to your production domain in Vercel environment variables (e.g., https://www.lakeridepros.com)
NEXT_PUBLIC_SERVER_URL=http://localhost:3000
# Fallback for server-side usage (legacy, still supported)
SERVER_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000

# Email Configuration (Payload)
EMAIL_FROM_NAME=Lake Ride Pros
EMAIL_FROM=contactus@updates.lakeridepros.com

# Supabase Storage (for media uploads)
# Note: These are auto-managed by Vercel when using Supabase integration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Google Reviews Sync (via Outscraper + Supabase Edge Function)
# Get your Place ID from: https://outscraper.com/google-place-id-finder/
# Or from Google Maps: search your business, copy place_id from URL
GOOGLE_PLACE_ID=ChIJJ8GI2fuCGWIRW8RfPECoxN4

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Lake Ride Pros

# Email Configuration
RESEND_API_KEY=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
CONTACT_EMAIL=contactus@lakeridepros.com

# Moovs Booking Configuration
NEXT_PUBLIC_MOOVS_EMBED_URL=

# Printify Configuration (for print-on-demand fulfillment)
PRINTIFY_API_TOKEN=
PRINTIFY_SHOP_ID=

# Inngest Configuration (for background jobs)
# Get these from your Inngest dashboard: https://app.inngest.com
INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=

# Claude AI Configuration (for SEO content generation)
# Get your API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=

# Cloudflare Turnstile Configuration (for bot protection on forms)
# Get your keys from: https://dash.cloudflare.com/?to=/:account/turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# Bridal Show Admin Configuration
# Set a password for accessing the bridal show admin page
# Access admin at: /bridal-show-admin (password required)
BRIDAL_SHOW_ADMIN_PASSWORD=
