{
  "installCommand": "npm install --legacy-peer-deps",
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "lakeridepros.com"
        }
      ],
      "destination": "https://www.lakeridepros.com/:path*",
      "permanent": true
    }
  ],
  "functions": {
    "app/api/printify/sync-products/route.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/gift-cards/send-scheduled",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/sync-google-reviews",
      "schedule": "0 6 * * *"
    }
  ]
}
